---
export interface Props {
	title: string;
	body: string;
  dark?: boolean;
}

const { title, body, dark } = Astro.props;
---

<li class={`
  p-6 md:p-10 rounded-lg
  ${dark ? 'bg-[#151515] text-white' : 'bg-[#f7f7f7] text-black'}
`}>
		<h3 class="text-center text-xl md:text-2xl font-bold mb-2">{title}</h3>
		<p class="text-left md:text-lg">{body}</p>
</li>
