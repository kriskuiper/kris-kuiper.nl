{
  "name": "static-site-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:kriskuiper/static-site-starter.git",
  "author": "Kris <kriskuiper74@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf _site",
    "build": "run-s build:*",
    "build:css": "postcss src/assets/css/index.css -o _site/styles/index.css",
    "build:eleventy": "cross-env ELEVENTY_ENV=production eleventy",
    "watch": "run-p watch:*",
    "watch:eleventy": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "watch:css": "postcss src/assets/css/index.css -o _site/styles/index.css -w"
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2"
  }
}
